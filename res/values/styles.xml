<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="myTheme" parent="android:Theme.Light.NoTitleBar" marginTop="10dp">
       	<item name="android:colorBackgroundCacheHint">#00000000</item>
        
        <item name="android:buttonStyle">@style/circ_button</item>
        <item name="android:textColor">@color/drkbl</item>
        <item name="android:selectAllOnFocus">@style/lst_style</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
   </style>
   
	<style name="buttonred" parent="android:Widget.Button">
           <item name="android:background">@drawable/custom_selector</item>
           <item name="android:textColor">@color/white</item>
   </style>
   <style name="circ_button" parent="android:Widget.Button">
           <item name="android:background">@drawable/circular_btn</item>
           <item name="android:textColor">@color/white</item>
   </style>
   <style name="blue_btn" parent="android:Widget.Button">
           <item name="android:background">@drawable/blue_btn_sel</item>
           <item name="android:textColor">@color/white</item>
           <item name="android:paddingLeft">10dp</item>
           <item name="android:paddingRight">10dp</item>
           
   </style>
   <style name="lst_style">
           <item name="android:background">@drawable/generic_selector</item>
   </style>
	<style name="CustomThemeDialog" parent="android:Theme.Dialog">
        <item name="android:buttonStyle">@style/buttonred</item>
        <item name="android:textColor">@color/lghtbl</item>
    </style>
    <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
		<item name="android:textColor">@android:color/primary_text_light</item>
	</style>
	
</resources>